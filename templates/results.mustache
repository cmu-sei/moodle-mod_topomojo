{{!
    @template mod_topomojo/results

    This template renders a table of data

            Example context (json):
            {
                tableheaders: [heading 1, heading 2]
                tabledata: [ [item1row 1, item2row 1], [item2row1, item2row2] ]
            }
}}

<div class = "table-responsive">
    <table class = "table table-striped">
        {{! Using a get_string helper }}
        <caption>
            {{# str }} taskcaption, mod_topomojo {{/ str }}
        </caption>
        <thead>
            {{#tableheaders}}
                <th>{{.}}</th>
            {{/tableheaders}}
        </thead>
        <tbody>
            {{#tabledata}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{desc}}</td>
                    <td><button id="{{id}}" class="btn btn-primary exec-task">{{action}}</button></td>
                    {{#comment}}
                        <td>{{comment}}</td>
                    {{/comment}}
                    <td id="result-{{id}}" class="result">{{result}}</td>
                    <td>{{points}}</td>
                    <td id="score-{{id}}" class="score">{{score}}</td>
                </tr>
            {{/tabledata}}
        </tbody>
    </table>
</div>

